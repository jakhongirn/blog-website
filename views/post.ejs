<%- include("partials/header") -%>

<%  
        blogDate = new Date(date);
        var monthNames = ["January", "February", "March","April", "May", "June", "July","August", "September", "October", "November", "December"]; 
        var d = blogDate.getDate(); 
        var m = monthNames[blogDate.getMonth()];
        var y = blogDate.getFullYear(); 
        
    %>


<div>
<h1><%= title %></h1>

    <h4 class="blog-date"><%= d + ' ' + m + ' ' + y %> | <%= author %> </h4>


<p><%= content %></p>

</div>



<div class="btn-container">
    
    
    
    <div>
        <a href="/update/<%=id%>" class="btn noselect btn-update">
            <span class="text">Update</span>
            <span class="icon">
                ✏️
        </a>
    </div>
    <div>
        <form action="/delete/<%=id%>" method="post">
        <button type="submit" name="id" class="btn noselect btn-delete">
            <span class="text">Delete</span>
            <span class="icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                    <path d="M24 20.188l-8.315-8.209 8.2-8.282-3.697-3.697-8.212 8.318-8.31-8.203-3.666 3.666 8.321 8.24-8.206 8.313 3.666 3.666 8.237-8.318 8.285 8.203z">
        
                    </path>
                </svg>
            </span>
        </button>
    </form>
    </div>
    
    </div>


<%- include("partials/footer") -%>
