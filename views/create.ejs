<%- include("partials/header") -%>

<h1>Create blog</h1>

<form class="form" method="post" action="/create">
  <div class="form-group">
    <label for="blog-title-form">Title</label>
    <input
      id="blog-title-form"
      type="text"
      class="form-control"
      name="blogTitle"
    />
    <label for="blog-post-form">Content</label>
    <textarea
      id="blog-post-form"
      name="blogBody"
      class="form-control"
      cols="30"
      rows="5"
    ></textarea>
    <label for="blog-date-form">Choose a Date</label>
    <input 
    id="blog-date-form"
    type="date"
    class="form-control"
    name="blogDate">
  
  <label for="blog-author-form">Author</label>
    <input 
    id="blog-author-form"
    type="text"
    class="form-control"
    name="blogAuthor">
  </div>

  <button class="btn btn-primary btn-publish" type="submit" name="publishButton">
    Publish ðŸ–Œ
  </button>
</form>

<%- include("partials/footer") -%>
