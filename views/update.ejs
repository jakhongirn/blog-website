<%- include("partials/header") -%>

<h1>Update blog</h1>



<form class="form" method="post" action="/update/<%=id%>">
    <div class="form-group">
      <label for="blog-title-form">Title</label>
      <input
        id="blog-title-form"
        type="text"
        class="form-control"
        name="blogTitle"
        value="<%=title%>"
      />
      <label for="blog-post-form">Content</label>
      <textarea
        id="blog-post-form"
        name="blogBody"
        
        class="form-control"
        cols="30"
        rows="5"
        
      ><%=content%></textarea>
      <label for="blog-date-form">Choose a Date</label>
    <input 
    id="blog-date-form"
    type="date"
    class="form-control"
    name="blogDate"
    value="<%=date%>">
  
  <label for="blog-author-form">Author</label>
    <input 
    id="blog-author-form"
    type="text"
    class="form-control"
    name="blogAuthor"
    value="<%=author%>">
  </div>
    
  
    <button class="btn btn-primary btn-publish" type="submit" name="publishButton">
      Publish
    </button>
  </form>
  

<%- include("partials/footer") -%>